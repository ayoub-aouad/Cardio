<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rapport_form" model="ir.ui.view">
            <field name="name">rapport.form</field>
            <field name="model">osi.rapport</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="medicin_id" domain="[('is_medicins', '=',True) ]"/>
                                <field name="text"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="hospi_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rapport_tree" model="ir.ui.view">
            <field name="name">rapport.tree</field>
            <field name="model">osi.rapport</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="medicin_id"/>
                    <field name="date"/>
                    <field name="text"/>
                </tree>
            </field>
        </record>

        <record id="rapport_action" model="ir.actions.act_window">
            <field name="name">Rapport</field>
            <field name="res_model">osi.rapport</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="rapport_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>