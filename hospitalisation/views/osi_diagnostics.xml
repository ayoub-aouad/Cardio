<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="osi_diagnostcs_form" model="ir.ui.view">
            <field name="name">osi.diagnostics.form</field>
            <field name="model">osi.diagnostics</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group name="group1">
                            <group>
                                <field name="parent_id" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="osi_diagnostics_tree" model="ir.ui.view">
            <field name="name">Diagnostiques</field>
            <field name="model">osi.diagnostics</field>
            <field name="arch" type="xml">
                <tree string="Diagnostics" editable="bottom">
                    <field name="name"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="osi_diagnostics_action" model="ir.actions.act_window">
            <field name="name">Diagnostics</field>
            <field name="res_model">osi.diagnostics</field>
            <field name="context">{'group_by': 'parent_id'}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_osi_diagnostics_filter" model="ir.ui.view">
            <field name="name">osi.diagnostics.select</field>
            <field name="model">osi.diagnostics</field>
            <field name="arch" type="xml">
                <search string="Search Project">
                    <field name="name" string="Dignostique"/>
                    <field name="parent_id" string="Famille"/>
                    <group expand="0" string="Group By">
                        <filter string="Famille" name="Famille" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        
    </data>
</odoo>