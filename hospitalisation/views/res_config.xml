<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="res_config_settings_view_form_hospitalisation" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.hospitalisation</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="replace">
                    <div class="app_settings_block" data-string="Hospitamisation" id="hospital" string="Hospitalisation" data-key="hospital" >
                        <h2 class="o_setting_right_pane">Définir la durée maximale</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="text-muted content-group mt16">
                                        <span>Durée Max</span>
                                        <field name="max_duration" class="text-center oe_inline" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        
        <record id="hospitalisation_config_action" model="ir.actions.act_window">
            <field name="name">Configuration générale</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'hospitalisation', 'bin_size': False}</field>
        </record>
    </data>
</odoo>