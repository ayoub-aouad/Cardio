        <!-- Search -->
        <record id="view_osi_lits_filter" model="ir.ui.view">
            <field name="name">osi.lits.select</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <search string="Search Lits">
                    <group expand="0" string="Group By">
                        <filter string="Chambre" name="group_room" context="{'group_by': 'room'}"/>
                        <filter string="Secteur" name="group_sector" context="{'group_by': 'sector'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action 1 -->
        <record id="osi_lits_action_1" model="ir.actions.act_window">
            <field name="name">Lits</field>
            <field name="res_model">osi.lits</field>
            <field name="context">{'search_default_group_room': 1}</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="osi_lits_view_kanban_1"/>
