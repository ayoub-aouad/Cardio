<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="osi_lits_form" model="ir.ui.view">
            <field name="name">osi.lits.form</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Lits">
                    <header>
                        <field name="kanban_state" widget="statusbar" options="{'clickable': '1'}" />
                    </header>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" required="1" placeholder="Name..."/>
                        </h1>
                    </div>
                        <group name="group1">
                            <group name='group11'>
                                <field name="room"/>
                                <field name="sector"/>
                            </group>
                            <group ame='group12'>
                                <field name="medicins_ids" widget="many2many_tags"  domain="[('is_medicins', '=',True) ]"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="osi_lits_tree" model="ir.ui.view">
            <field name="name">osi.lits.tree</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <tree string="Lits">
                    <field name="name"/>
                    <field name="room"/>
                    <field name="sector"/>
                    <field name="medicins_ids"/>
                </tree>
            </field>
        </record>

        <record id="osi_lits_view_kanban" model="ir.ui.view">
            <field name="name">osi.lits.view.kanban</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <kanban>
                    <progressbar field="kanban_state" colors='{"free": "success", "blocked": "danger", "used": "warning"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details" >
                                <strong>
                                <h4 class="d-flex flex-row ">
                                <field name="name" />
                                </h4>
                                </strong>
                                <ul>                            
                                    <li>Chambre : <field name="room"/></li>
                                    <li class="d-flex flex-row justify-content-between">
                                        Secteur : <field name="sector"/>
                                        Statue : <field name="kanban_state"/>
                                    </li>
                                </ul>
                            </div> 
                        </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search -->
        <record id="view_osi_lits_filter" model="ir.ui.view">
            <field name="name">osi.lits.select</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <search string="Search Lits">
                    <group expand="0" string="Group By">
                        <filter string="Chambre" name="Chambre" context="{'group_by': 'room'}"/>
                        <filter string="Secteur" name="Secteur" context="{'group_by': 'sector'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="osi_lits_action" model="ir.actions.act_window">
            <field name="name">Lits</field>
            <field name="res_model">osi.lits</field>
            <field name="context">{'group_by': ['kanban_state']}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>