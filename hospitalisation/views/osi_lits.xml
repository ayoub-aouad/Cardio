<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="osi_lits_form" model="ir.ui.view">
            <field name="name">osi.lits.form</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Lits">
                    <header>
                        <button name="sef_to_blocked" type="object" string="Block Lit" attrs="{'invisible': [('kanban_state','!=','free')]}"/>
                        <button name="sef_to_free" type="object" string="Réinitialiser" attrs="{'invisible': [('kanban_state','!=','blocked')]}"/>
                        <field name="kanban_state" widget="statusbar"/>
                    </header>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" required="1" placeholder="Name..."/>
                        </h1>
                    </div>
                        <group name="group1">
                            <group name='group11'>
                                <field name="room"/>
                                <field name="sector"/>
                            </group>
                            <group ame='group12'>
                                <field name="medicins_ids" widget="many2many_tags"  domain="[('is_medicins', '=',True) ]"/>
                                <field name="patient_id" />
                                <field name="diagnostics_id" />
                                <field name="duration"/>
                                <field name="is_red" invisible="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Les hospitalisations">
                                <field name="hospi_ids" context="{'default_lits_id': active_id}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="osi_lits_tree" model="ir.ui.view">
            <field name="name">osi.lits.tree</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <tree string="Lits">
                    <field name="name"/>
                    <field name="room"/>
                    <field name="sector"/>
                    <field name="medicins_ids"/>
                </tree>
            </field>
        </record>

        <!-- kanban 1 -->

        <record id="osi_lits_view_kanban_1" model="ir.ui.view">
            <field name="name">osi.lits.view.kanban</field>
            <field name="model">osi.lits</field>
            <field name="arch" type="xml">
                <kanban>
                <field name="kanban_state"/>
                    <progressbar field="kanban_state" colors='{"free": "success", "blocked": "danger", "used": "warning"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-if="record.kanban_state.raw_value == 'used'" style="background-color: #fa9150;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);background-image: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.25));padding: 10px;">
                                <div class="oe_kanban_details">
                                    <strong>
                                    <h4 class="d-flex flex-row " >
                                    <field name="name" />
                                    </h4>
                                    </strong>
                                    <ul>                            
                                        <li>Chambre : <field name="room"/></li>
                                        <li>Médecins : <field name="medicins_ids"/></li>
                                        <li>Patient : <field name="patient_id"/></li>
                                        <li>Diagnostique : <field name="diagnostics_id"/></li>
                                        <li class="d-flex flex-row justify-content-between">
                                            Secteur : <field name="sector"/>
                                            Statut : <field name="kanban_state"/>
                                            Durée : <field name="duration"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-if="record.kanban_state.raw_value == 'blocked'" style="background-color: #fa5757;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);background-image: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.25));padding: 10px;">
                                <div class="oe_kanban_details"  >
                                    <strong>
                                    <h4 class="d-flex flex-row ">
                                    <field name="name" />
                                    </h4>
                                    </strong>
                                    <ul>                            
                                        <li>Chambre : <field name="room"/></li>
                                        <li>Médecins : <field name="medicins_ids"/></li>
                                        <li>Patient : <field name="patient_id"/></li>
                                        <li>Diagnostique : <field name="diagnostics_id"/></li>
                                        <li class="d-flex flex-row justify-content-between">
                                            Secteur : <field name="sector"/>
                                            Statut : <field name="kanban_state"/>
                                            Durée : <field name="duration"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-if="record.kanban_state.raw_value == 'free'" style="background-color: #33d45b;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);background-image: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.25));padding: 10px;">
                                <div class="oe_kanban_details"  >
                                <strong>
                                <h4 class="d-flex flex-row ">
                                <field name="name" />
                                </h4>
                                </strong>
                                <ul>                            
                                    <li>Chambre : <field name="room"/></li>
                                    <li>Médecins : <field name="medicins_ids"/></li>
                                    <li>Patient : <field name="patient_id"/></li>
                                    <li>Diagnostique : <field name="diagnostics_id"/></li>
                                    <li class="d-flex flex-row justify-content-between">
                                        Secteur : <field name="sector"/>
                                        Statut : <field name="kanban_state"/>
                                        Durée : <field name="duration"/>
                                    </li>
                                </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

