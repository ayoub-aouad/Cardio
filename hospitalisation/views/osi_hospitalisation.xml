<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="osi_hospitalisation_form" model="ir.ui.view">
            <field name="name">osi.hospitalisation.form</field>
            <field name="model">osi.hospitalisation</field>
            <field name="arch" type="xml">
                <form string="Hospitalisations">
                    <sheet string="Hospitalisation">
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group name="group1">
                            <group name="gourp11">
                                <field name="start_date"/>
                                <field name="patient_id"/>
                                <field name="sexe"/>
                                <field name="lits_id"/>
                                <field name="room"/>
                                <field name="sector"/>
                                <field name="diagnostics_id"/>
                            </group>
                            <group name="group12">
                                <field name="end_date" />
                                <field name="duration" />
                                <field name="stage_id"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                    <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="osi_hospitalisation_tree" model="ir.ui.view">
            <field name="name">Hospitalisation</field>
            <field name="model">osi.hospitalisation</field>
            <field name="arch" type="xml">
                <tree string="Hospitalisation">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="patient_id"/>
                    <field name="sexe"/>
                    <field name="lits_id"/>
                    <field name="room"/>
                    <field name="sector"/>
                    <field name="diagnostics_id"/>
                    <field name="end_date" />
                    <field name="duration" />
                </tree>
            </field>
        </record>

        <!-- Kanban -->
        <record id="osi_hospitalisation_view_kanban" model="ir.ui.view">
            <field name="name">osi.hospitalisation.view.kanban</field>
            <field name="model">osi.hospitalisation</field>
            <field name="arch" type="xml">
                <kanban default_group_by='stage_id'>
                    <field name="stage_id" options='{"group_by_tooltip": {"name": "Description"}}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name" /></strong>
                                <ul>
                                    <li><field name="patient_id"/></li>                                
                                    <li><field name="lits_id"/></li>                                
                                </ul>
                            </div>
                            
                        </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="osi_hospitalisation_action" model="ir.actions.act_window">
            <field name="name">Hospitalisation</field>
            <field name="res_model">osi.hospitalisation</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        
        
    </data>
</odoo>